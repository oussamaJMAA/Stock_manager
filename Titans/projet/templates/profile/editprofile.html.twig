{% extends 'base.html.twig' %}


{% block stylesheets %}
<link rel="shortcut icon" href="{{asset('assets/img/favicon.png')}}">

<link rel="stylesheet" href="{{asset('assets/css/bootstrap.min.css')}}">

<link rel="stylesheet" href="{{asset('assets/plugins/fontawesome/css/fontawesome.min.css')}}">
<link rel="stylesheet" href="{{asset('assets/plugins/fontawesome/css/all.min.css')}}">

<link rel="stylesheet" href="{{asset('assets/plugins/select2/css/select2.min.css')}}">

<link rel="stylesheet" href="{{asset('assets/css/bootstrap-datetimepicker.min.css')}}">

<link rel="stylesheet" href="{{asset('assets/css/style.css')}}">
{% endblock %}


{% block body %}
<div class="page-header">
<div class="row">
<div class="col-sm-6">
<h3 class="page-title">Param√©tres</h3>
<ul class="breadcrumb">
<li class="breadcrumb-item"><a href="index.html">Dashboard</a>
</li>
<li class="breadcrumb-item active">Profile Settings</li>
</ul>
</div>
</div>
</div>
<div class="row">
<div class="col-xl-3 col-md-4">

<div class="widget settings-menu">
<ul>
<li class="nav-item">
<a href="#" class="nav-link active">
<i class="far fa-user"></i> <span>Profile Settings</span>
</a>
</li>

<li class="nav-item">
<a href="{{ path('change_password')}}" class="nav-link">
<i class="fas fa-unlock-alt"></i> <span>Modifer le mot de passe</span>
</a>
</li>
<li class="nav-item">
<a href="{{ path('delete_page', {'id': app.user.id}) }}"class="nav-link">
<i class="fas fa-ban"></i> <span>Delete Account</span>
</a>
</li>
</ul>
</div>

</div>
<div class="col-xl-9 col-md-8">
<div class="card">
<div class="card-header">
<h5 class="card-title">Modification du profile de  {{app.user.nom}}</h5>
</div>
<div class="card-body">


<div class="row form-group">
<label for="name" class="col-sm-3 col-form-label input-label">Name</label>
<div class="col-sm-9">
<div class="d-flex align-items-center">
<label class="avatar avatar-xxl profile-cover-avatar m-0" for="edit_img">
<img id="avatarImg" class="avatar-img" src="{{asset('assets/img/profiles/avatar-02.jpg')}}" alt="Profile Image">
<input type="file" id="edit_img">
<span class="avatar-edit">
<i data-feather="edit-2" class="avatar-uploader-icon shadow-soft"></i>
</span>
</label>
</div>
</div>
</div>
{{ form_start(form) }}
<div class="row form-group">
{{ form_label(form.nom, 'Nom', {'label_attr': {'class': 'col-sm-3 col-form-label input-label'}}) }}
<div class="col-sm-9">
{{ form_widget(form.nom,{ 'value': app.user.nom  }  ,{'attr':{'placeholder' : 'Votre nom'}}) }}


</div>
</div>
<div class="row form-group">
{{ form_label(form.email, 'Email', {'label_attr': {'class': 'col-sm-3 col-form-label input-label'}}) }}

<div class="col-sm-9">
{{ form_widget(form.email, {'value':app.user.email},{ 'attr': {'class': 'form-control' , 'placeholder' :'Votre Email'  } }) }}
</div>
</div>



<div class="text-end">
<button type="submit" class="btn btn-primary">Save Changes</button>
</div>
{{ form_end(form) }}

</div>
</div>
</div>
</div>
</div>
</div>

</div>
{% endblock %}


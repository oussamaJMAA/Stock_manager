{% extends 'base.html.twig' %}

{% block title %}Change password
{% endblock %}


{% block body %}


<div class="page-header">
<div class="row">
<div class="col-sm-6">
<h3 class="page-title">Settings</h3>
<ul class="breadcrumb">
<li class="breadcrumb-item"><a href="index.html">Dashboard</a>
</li>
<li class="breadcrumb-item active">Change Password</li>
</ul>
</div>
</div>
</div>
<div class="row">
<div class="col-xl-3 col-md-4">

<div class="widget settings-menu">
<ul>
<li class="nav-item">
<a href="{{ path('settings', {'id': app.user.id}) }}"class="nav-link">
<i class="far fa-user"></i> <span>Profile Settings</span>
</a>
</li>
<li class="nav-item">
<a href="#" class="nav-link active">
<i class="fas fa-unlock-alt"></i> <span>Change Password</span>
</a>
</li>
<li class="nav-item">
<a href="{{ path('delete_page', {'id': app.user.id}) }}" class="nav-link">
<i class="fas fa-ban"></i> <span>Delete Account</span>
</a>
</li>
</ul>
</div>

</div>
<div class="col-xl-9 col-md-8">
<div class="card">
<div class="card-header">
<h5 class="card-title">Change Password</h5>
</div>
<div class="card-body">

 {{ form_start(changePasswordForm)}}
<div class="row form-group">
{{ form_label(changePasswordForm.oldPassword, 'Mot de passe acutel', {'label_attr': {'class': 'col-sm-3 col-form-label input-label'}}) }}


<div class="col-sm-9">
{{ form_widget(changePasswordForm.oldPassword, {'attr': {'placeholder': 'Entrez votre  mot de passe actuel'}}) }}
</div>
</div>
<div class="row form-group">
{{ form_label(changePasswordForm.newPassword.first, 'Nouveau mot de passe', {'label_attr': {'class': 'col-sm-3 col-form-label input-label'}}) }}


<div class="col-sm-9">
{{ form_widget(changePasswordForm.newPassword.first, {'attr': {'placeholder': 'Entrez votre nouveau mot de passe'}}) }}

</div>
</div>

<div class="row form-group">
{{ form_label(changePasswordForm.newPassword.second, 'Confirmer le mot de passe', {'label_attr': {'class': 'col-sm-3 col-form-label input-label'}}) }}

<div class="col-sm-9">
<div class="mb-3">
{{ form_widget(changePasswordForm.newPassword.second, {'attr': {'placeholder': 'Confirmer le mot de passe'}}) }}
</div>

<div class="text-end">
<button type="submit" class="btn btn-primary">Save Changes</button>
   {{ form_end(changePasswordForm) }}
</div>


</div>
</div>
</div>
</div>
</div>
</div>

</div>
{% endblock %}

 